{
  "name": "100cims-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "app": "yarn workspace @100cims/app",
    "api": "yarn workspace @100cims/api",
    "dev:app": "yarn workspace @100cims/app start",
    "dev:api": "yarn workspace @100cims/api dev",
    "build:app": "yarn workspace @100cims/app build",
    "build:api": "yarn workspace @100cims/api build",
    "lint": "yarn workspaces run lint",
    "type-check": "yarn workspaces run type-check"
  },
  "packageManager": "yarn@1.22.22",
  "engines": {
    "node": ">=18.0.0",
    "yarn": "1.22.22"
  }
}
